<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/termsListFragment">

    <fragment
        android:id="@+id/termsListFragment"
        android:name="com.example.termdictionary.presentation.ui.terms_list.TermsListFragment"
        android:label="@string/terms"
        tools:layout="@layout/fragment_terms_list">
        <action
            android:id="@+id/action_termsListFragment_to_termDetailFragment"
            app:destination="@id/termDetailFragment" />
        <action
            android:id="@+id/action_termsListFragment_to_termsListFilterFragment"
            app:destination="@id/termsListFilterFragment" />
        <action
            android:id="@+id/action_termsListFragment_to_chosenTermsFragment"
            app:destination="@id/chosenTermsFragment" />
    </fragment>
    <fragment
        android:id="@+id/termDetailFragment"
        android:name="com.example.termdictionary.presentation.ui.term_details.TermDetailsFragment"
        android:label="{term_name}"
        tools:layout="@layout/fragment_term_details">
        <argument
            android:name="term"
            app:argType="com.example.termdictionary.presentation.model.TermUI" />
        <argument
            android:name="term_name"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/termsListFilterFragment"
        android:name="com.example.termdictionary.presentation.ui.filter_terms_list.TermsListFilterFragment"
        android:label="fragment_filter_terms_list"
        tools:layout="@layout/fragment_filter_terms_list" />
    <fragment
        android:id="@+id/chosenTermsFragment"
        android:name="com.example.termdictionary.presentation.ui.chosen_terms.ChosenTermsFragment"
        android:label="@string/chosen"
        tools:layout="@layout/fragment_chosen_terms" >
        <action
            android:id="@+id/action_chosenTermsFragment_to_termDetailFragment"
            app:destination="@id/termDetailFragment" />
    </fragment>
</navigation>