<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:cardCornerRadius="16dp"
    tools:context=".presentation.ui.filter_terms_list.TermsListFilterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Направление">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView_major"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="none"
                android:text="Прикладная информатика" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Дисциплина">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView_subject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="none"
                android:text="Математический анализ" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/chosen_switch"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            app:useMaterialThemeColors="false"
            android:textSize="16sp"
            android:theme="@style/SwitchStyle"
            android:text="Избранное"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_apply_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/white"
            android:text="Применить"
            android:textAllCaps="false"
            android:textColor="@color/red_500"
            app:cornerRadius="8dp"
            app:strokeColor="@color/grey"
            app:strokeWidth="1dp" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>